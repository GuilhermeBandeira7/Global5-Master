@page "/fornecedores/adicionar"
@inherits AddFornecedorPage

<MudText Typo="Typo.h3">Novo Fornecedor</MudText>

<MudPaper Class="pa-8 mt-4">
    <EditForm Model="@InputModel" OnValidSubmit="OnValidSubmitAsync">
        <DataAnnotationsValidator />

        <MudTextField Label="CNPJ"
                      HelperText="Campo obrigatório"
                      @bind-Value="InputModel.CNPJ"
                      For="@(() => InputModel.CNPJ)" />

        <MudTextField Label="Razão Social"
                      HelperText="Campo obrigatório"
                      @bind-Value="InputModel.RazaoSocial"
                      For="@(() => InputModel.RazaoSocial)" />

        @if (IsBusy)
        {
            <MudProgressCircular Indeterminate="true" Color="Color.Primary" />
        }
        else
        {
            <MudButton ButtonType="ButtonType.Submit"
                       Variant="Variant.Filled"
                       Color="Color.Primary">
                Salvar
            </MudButton>
        }
    </EditForm>
</MudPaper>